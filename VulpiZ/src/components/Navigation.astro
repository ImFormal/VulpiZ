<script>
  document.addEventListener('DOMContentLoaded', () => {
    const currentUrl = window.location.pathname;
    document.querySelectorAll('.nav-links a').forEach(link => {
      if (link.getAttribute('href') === currentUrl) {
        link.classList.add('active');
      }
    });
  });
</script>

