<style>
    footer{
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: linear-gradient(0.25turn, var(--ft-primary), var(--ft-second));
        color: white;
        text-align: center;
        position: relative;
        height: 60px;
        width: 100%;
        box-shadow: 0px -3px 20px rgba(0, 0, 0, 0.25);
      }
      
      footer nav{
      display: flex;
      align-items: center; 
      justify-content: center;
      gap: 50px;
      flex: 1;
      min-width: 50%;
      }
      
      footer p{
      margin: 0;
      text-align: right;
      font-size: 14px;
      flex: 1;
      }
      
      footer a{
      color: white;
      text-decoration: none;
      font-size: 20px;
      }
      
      footer .spacer{
      flex: 1;
      }
      
      /*Tablette*/
      @media (max-width: 1132px){
        footer{
          flex-direction: column; 
          height: auto;
          text-align: center; 
          padding: 15px;
          width: 100%;
        }
        
        footer nav{
          gap: 20px; 
        }
        
        footer p{
          margin-top: 15px;
        }
        
        footer a{
          font-size: 18px; 
        }
      }
        
      /*Mobile*/
      @media (max-width: 480px){
        footer nav{
          gap: 15px;
        }
        
        footer p{
          margin-top: 15px;
        }
        
        footer a{
          font-size: 16px;
        }
      }
</style>  