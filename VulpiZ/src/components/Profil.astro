---
import '../styles/profil.css';

// Valeurs par d√©faut initiales
const userData = {
    pseudo_utilisateur: 'undefined',
    titre_utilisateur: 'Renardo',
    monnaie_utilisateur: 0,
    lvl_utilisateur: 1,
    xp_utilisateur: 0,
    avatar_utilisateur: 'default.png'
};
const maxXp = 1000;
const profileUrl = "/pageProfil";
---

<div class="profile-container">
    <div class="profile-info">
        <div>
            <span class="titre">[{userData.titre_utilisateur}]</span>
            <span class="pseudo">{userData.pseudo_utilisateur}</span>
        </div>
        <div class="currency">
            <span class="currency-amount">Monnaie : {userData.monnaie_utilisateur.toLocaleString()} credits</span>
        </div>
        <div class="level-progress">
            <div class="level-text">Level {userData.lvl_utilisateur} ({userData.xp_utilisateur.toLocaleString()} / {maxXp.toLocaleString()} xp)</div>
            <div class="progress-bar">
                <div class="progress" style={`width: ${(userData.xp_utilisateur / maxXp) * 100}%;`}></div>
            </div>
        </div>
    </div>
    <a href={profileUrl} class="profile-image-link">
        <img src={`/avatars/${userData.avatar_utilisateur}`} alt="Photo de profil" class="profile-image" />
    </a>
</div>
<script src="../js/profileData.js"></script>