---
import Navigation from '../components/Navigation.astro';
import Profil from '../components/Profil.astro';
import logo from '../assets/logo.svg'
---

<header>
    <a href="/"><img src={logo.src} alt="Logo VulpiZ"></a>
    <Navigation />
    <Profil />
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 2rem;
        height:160px;
    }
    a{
        width:20%;
    }
    img{
        width:100%;
    }
</style>