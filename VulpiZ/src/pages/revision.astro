---
import Layout from '../layouts/Layout.astro';
import TableauContent from '../components/TableauContent.astro';
import GameMode from '../components/GameMode.astro';

const pageTitle = "Révision | VulpiZ";
---

<Layout pageTitle={pageTitle}>
    <div class="content">
        <TableauContent type="patch_notes" mode="Révision" />
        <GameMode mode="Révision" />
        <TableauContent type="quetes" mode="Révision" />
    </div>
</Layout>

<style>
    .content {
        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
        gap: 2rem;
        padding: 2rem;
    }
</style>