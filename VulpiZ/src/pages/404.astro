---
import Layout from '../layouts/LayoutWithoutComponents.astro';
import ErrorImg from '../assets/404_fox.svg';
import '../styles/404.css';

const pageTitle = "Erreur 404 | VulpiZ";
---
<Layout pageTitle={pageTitle}>
    <div class="content">
        <h1 class="titre">Erreur 404 - Page non trouvée</h1>
        
        <img src={ErrorImg.src} alt="404fox" >
        
        <p class="accroche">La page que vous recherchez n'existe pas.</p>
        <a href="/" class="redirection" onclick="window.location.href = '/'; return false;">Retour à l'accueil</a>
    </div>
</Layout>